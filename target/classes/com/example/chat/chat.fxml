<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.chat.ChatController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label fx:id="welcomeText" text="Wellcome to my chat!"/>
    <TextArea fx:id="txt_area" editable="false" VBox.vgrow="ALWAYS"/>
    <HBox>
        <TextField fx:id="txt_field" promptText="Input message" HBox.hgrow="ALWAYS" onAction="#sendMessage"/>
        <Button text="Send!" onAction="#sendMessage"/>
    </HBox>

</VBox>
